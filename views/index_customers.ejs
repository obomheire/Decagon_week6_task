<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"6
      crossorigin="anonymous"
    />
    <title>Week 6 Task Demo</title>
  </head>
  <body>
    <div class="container">
      <h2><%= title %></h2>
      <table>
        <tr>
          <td> <a  href="/add" class="btn btn-sm btn-primary">Add New Customer</a></td>
          <td><a  href="/login" class="btn btn-sm btn-primary">Logout</a></td>
        </tr>
      </table>
     
      
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Customer ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
            <% customers.forEach(customer => { %>
                <tr>
                    <td><%= customer.customerid %></td>
                    <td><%= customer.fullname %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.gender %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.notes %></td>
                    <td>
                        <a href="edit/<%=customer.customerid%>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="delete/<%=customer.customerid%>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
    <script src="./app.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
